<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">All Candidates</h1>

  <table class="min-w-full bg-white border border-gray-300">
    <thead>
      <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
        <th class="py-3 px-6 text-left">Title</th>
        <th class="py-3 px-6 text-left">Book URL</th>
        <th class="py-3 px-6 text-left">Image URL</th>
      </tr>
    </thead>
    <tbody class="text-gray-600 text-sm font-light">
      <% @candidates.each do |candidate| %>
        <tr class="border-b hover:bg-gray-100">
          <td class="py-3 px-6"><%= candidate.title %></td>
          <td class="py-3 px-6"><%= candidate.url %></td>
          <td class="py-3 px-6"><%= candidate.image_url %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

